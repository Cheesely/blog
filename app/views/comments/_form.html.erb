<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div>
    <div>
      <%= form.label :commenter %>
    </div>
    <div>
      <%= form.text_field :commenter %>
    </div>
  </div>
  <div>
    <div>
      <%= form.label :body %>
    </div>
    <div>
      <%= form.text_area :body %>
    </div>
  </div>
  <div>
    <div>
      <%= form.label :status %>
    </div>
    <div>
      <%= form.select :status, Visible::VALID_STATUSES, selected: 'public' %>
    </div>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
