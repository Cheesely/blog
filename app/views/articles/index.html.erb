<div class="min-h-full">
  <%= render "shared/nav" %>
  <main>
    <% if @articles.present? %>
    <div class="mx-auto max-w-3xl py-6 sm:px-6 lg:px-8 bg-gray-50">
      <ul role="list" class="divide-y divide-gray-100 p-4 ">
        <%= render @articles %>
      </ul>
    </div>
    <% else %>
      <div class="text-center">
        <h3 class="mt-6 text-sm font-semibold text-gray-900">No articles</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new article.</p>
        <div class="mt-6">
          <%= link_to new_article_path do %>
            <div class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
              <span>New Article</span>
            </div>
          <% end %>
        </div>
      </div>
  <% end %>
  </main>
</div>

